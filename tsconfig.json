{
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}